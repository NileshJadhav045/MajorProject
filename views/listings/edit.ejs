<% layout("/layouts/boilerplate") %>

<div class="row mt-2">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          placeholder="Enter title"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          required
        >
          <%= listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <!-- Original Image + Upload New -->
      <div class="row mb-3">
        <!-- Original Image -->
        <div class="col-6 md-6">
          <label class="form-label d-block">Original Listing Image</label>
          <img
            src="<%= listing.image.url %>"
            alt="Current Listing Image"
            class="img-fluid rounded shadow-sm border"
            style="max-height: 300px; object-fit: cover"
          />
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input type="file" name="image" class="form-control" />
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            name="listing[price]"
            value="<%= listing.price %>"
            placeholder="Enter price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Enter Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            placeholder="Enter country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          placeholder="Enter location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a location</div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit</button>
      <br /><br />
    </form>
  </div>
</div>
